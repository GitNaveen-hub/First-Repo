pipeline {
    agent any
    
    env{
       PATH="$/opt/apache-maven-3.8.3/bin:$PATH"
    }
    stages{
        stage("git checkout"){
            steps{
                git 'https://github.com/akashkrkashyap/maven-simple.git'
        
            }
        }
        stage("Maven build"){
            steps{
                sh "mvn clean package"
        
            }
        }
    }
}

